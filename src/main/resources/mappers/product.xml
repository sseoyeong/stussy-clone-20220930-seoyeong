<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stussy.stussyclone20220930seoyeong.repository.ProductRepository">

    <resultMap id="getProductDtl" type="com.stussy.stussyclone20220930seoyeong.repository.ProductRepository">
        <result property="id" column="pdt_dtl_id"></result>
        <result property="pdt_color" column="pdt_dtl_id"></result>
        <result property="size_id" column="pdt_dtl_id"></result>
        <result property="size_name" column="pdt_dtl_id"></result>
        <result property="pst_stock" column="pdt_dtl_id"></result>
    </resultMap>

    <resultMap id="getProductImg" type="com.stussy.stussyclone20220930seoyeong.domain.ProductImg">
        <result property="save_name" column="save_name"></result>
    </resultMap>

    <resultMap id="getProductMst" type="com.stussy.stussyclone20220930seoyeong.domain.Product">
        <result property="id" column="id"></result>
        <result property="pdt_name" column="pdt_name"></result>
        <result property="pdt_price" column="pdt_price"></result>
        <result property="pdt_simple_info" column="pdt_simple_info"></result>
        <result property="pdt_detail_info" column="pdt_detail_info"></result>
        <result property="pdt_option_info" column="pdt_option_info"></result>
        <result property="pdt_management_info" column="pdt_management_info"></result>
        <result property="pdt_shipping_info" column="pdt_shipping_info"></result>
        <collection property="pdt_dtls" javaType="list" resultMap="getProductDtl"></collection>
        <collection property="pdt_imgs" javaType="list" resultMap="getProductImg"></collection>
    </resultMap>
    <select id="getProductList" parameterType="hashmap" resultType="com.stussy.stussyclone20220930seoyeong.domain.CollectionsProduct">
        select
        pm.id,
        pm.pdt_name,
        pm.pdt_price,
        pim.save_name,
        pm_cnt.product_total_count
        from
        pdt_mst pm
        left outer join pdt_image_mst pim on(pim.pdt_id = pm.id)
        left outer join (   select count(*) product_total_count
        from pdt_mst
        where 1 = 1
        <if test='category != "all"'>
            and category_id = (select id from pdt_category_mst where category_name = #{category})
        </if> ) pm_cnt on(1 = 1)
        where
        1 = 1
        <if test='category != "all"'>
            and pm.category_id = (select id from pdt_category_mst where category_name = #{category})
        </if>
        group by
        pm.id
        limit #{index}, 16

    </select>
    <select id="getProduct" resultType="com.stussy.stussyclone20220930seoyeong.domain.Product">

    </select>

</mapper>